<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Combinatorio N°1"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="#6f4f28"
        />

    <EditText
        android:id="@+id/cajaC1numero1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:hint="Ingrese el primer numero"
        android:gravity="center"
        android:inputType="number"
        android:background="#dbdbdb"
        />

    <EditText
        android:id="@+id/cajaC1numero2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/cajaC1numero1"
        android:layout_marginTop="12dp"
        android:hint="Ingrese el seguno numero"
        android:gravity="center"
        android:inputType="number"
        android:background="#dbdbdb"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Combinatorio N°2"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="#6f4f28"
        />

    <EditText
        android:background="#dbdbdb"
        android:id="@+id/cajaC2numero1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/cajaC1numero2"
        android:layout_marginTop="12dp"
        android:hint="Ingrese el primer numero"
        android:gravity="center"
        android:inputType="number"/>

    <EditText
        android:background="#dbdbdb"
        android:id="@+id/cajaC2numero2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/cajaC2numero1"
        android:layout_marginTop="12dp"
        android:hint="Ingrese el segundo numero"
        android:gravity="center"
        android:inputType="number"/>

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/cajaC2numero2"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:text="Calcular"
        android:backgroundTint="#ea899a"
        />

    <TextView
        android:id="@+id/etiResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCalculate"
        android:layout_marginTop="24dp"
        android:text="Resultado: "

        android:textSize="18sp"/>


</LinearLayout>